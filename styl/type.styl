// Headings

h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6
  margin-bottom: headings-margin-bottom
  font-family: headings-font-family
  font-weight: headings-font-weight
  line-height: headings-line-height
  color: headings-color

h1 { font-size: font-size-h1 }
h2 { font-size: font-size-h2 }
h3 { font-size: font-size-h3 }
h4 { font-size: font-size-h4 }
h5 { font-size: font-size-h5 }
h6 { font-size: font-size-h6 }

// Following Bootstrap's lead we will keep these after the tag
// declarations so that the class will take precidence

.h1 { font-size: font-size-h1 }
.h2 { font-size: font-size-h2 }
.h3 { font-size: font-size-h3 }
.h4 { font-size: font-size-h4 }
.h5 { font-size: font-size-h5 }
.h6 { font-size: font-size-h6 }

// Display sizes which are slightly larger
.display-1, .display-2,
.display-3, .display-4
  hyphenate()
  
.display-1
  font-size: display1-size
  font-weight: display1-weight

.display-2
  font-size: display2-size
  font-weight: display2-weight

.display-3
  font-size: display3-size
  font-weight: display3-weight

.display-4
  font-size: display4-size
  font-weight: display4-weight

.display-*


.lead
  font-size: lead-size
  font-weight: lead-weight

// Horizontal rules

hr
  margin-top: spacer-y
  margin-bottom: spacer-y
  border: 0
  border-top: hr-border-width solid hr-border-color

// Emphasis

small,
.small
  font-size: 80%
  font-weight: normal

mark,
.mark
  padding: .2em
  background-color: state-warning-bg

.list-unstyled
  list-unstyled()

.list-inline
  list-unstyled()
.list-inline-item
  display: inline-block
  &:not(:last-child)
    margin-right: list-inline-padding

.dl-horizontal
  margin-right: grid-gutter-width
  margin-left: grid-gutter-width
  clearfix()

// Misc

.initialism
  font-size: 90%
  text-transform: uppercase

.blockquote
  padding: (spacer / 2) spacer
  margin-bottom: spacer
  font-size: blockquote-font-size
  border-left: .25rem solid blockquote-border-color

.blockquote-footer
  display: block
  font-size: 80%
  line-height: line-height
  color: blockquote-small-color
  &::before
    content: "\2014 \00A0"

.blockquote-reverse
  padding-right: spacer
  padding-left: 0
  text-align: right
  border-right: .25rem solid blockquote-border-color
  border-left: 0

.blockquote-reverse .blockquote-footer
  &::before
    content: ""
  &::after
    content: "\00A0 \2014"

.text-right { text-align: right; }
.text-left { text-align: left; }
.text-justify { text-align: justified; }
.text-center { text-align: center; }
